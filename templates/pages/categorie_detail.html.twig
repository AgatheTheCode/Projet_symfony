{% extends 'base.html.twig' %}
{% block body %}
    <section>
        <article class="cat_detail">
            <div class="cat_det">
                {% for item in categories %}
                    <h1>{{ item.name }}</a></h1>
                    <p><img src="{{ item.image }}" alt=""></p>
                    <h3>Categorie : {{ item.name }} </h3>
                    <h5>{{ item.description }}</h5>
                {% endfor %}
            </div>
            {% for element in produits %}
            <h2> Produit de la categorie : {{ element.nom }} </h2>
            <div class="main_prod">
                <div class="cat_prod">
                    <p>{{ element.nom }}</a></p>
                        <a href="produits_detail.php?id={{ element.id }}"><img src="{{ element.image }}.jpg" alt=""></a>
                    <p>Note : {{ element.note }} </p>
                    <p>Prix : {{ element.prix }} â‚¬ </p>
                </div>
                {% endfor %}
            </div>
        </article>
    </section>
{% endblock body %}